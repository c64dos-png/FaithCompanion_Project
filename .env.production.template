# FaithCompanion Production Environment Configuration
# Copy this file to .env and configure with production values

# Application
APP_NAME=FaithCompanion
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=faithcompanion_prod
DB_USER=faithcompanion_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Security
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/faithcompanion/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Bible API (if using external service)
BIBLE_API_KEY=YOUR_API_KEY_HERE
BIBLE_API_ENDPOINT=https://api.bible.com/v1
